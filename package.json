{
  "name": "@monorepo/casino",
  "private": true,
  "scripts": {
    "setup": "yarn lerna bootstrap",
    "setup:ui": "lerna exec --scope=@ui/app -- yarn run setup",
    "setup:be": "lerna exec --scope=@monorepo/be -- yarn run setup",
    "test": "yarn lerna run test --stream",
    "stest:be": "lerna exec --scope=@monorepo/be -- yarn test",
    "stest:ui": "lerna exec --scope=@monorepo/ui -- yarn test",
    "stest:common": "lerna exec --scope=@monorepo/common -- yarn test",
    "clean": "npx lerna run clean --stream",
    "start": "npx lerna run start --stream",
    "start:be": "lerna exec --scope=@monorepo/be -- yarn start",
    "start:ui": "lerna exec --scope=@ui/app -- yarn start",
    "serve": "npx lerna run serve --stream",
    "serve:be": "lerna exec --scope=@monorepo/be -- yarn run serve",
    "build": "npx lerna run build --stream",
    "build:be": "lerna exec --scope=@monorepo/be -- yarn build",
    "build:ui": "lerna exec --scope=@ui/app -- yarn build"
  },
  "devDependencies": {
    "craco": "^0.0.3",
    "lerna": "^5.4.3",
    "nx": "^14.5.7",
    "rimraf": "^3.0.2",
    "tslib": "^2.4.0"
  },
  "workspaces": {
    "packages": [
      "packages/**"
    ]
  }
}
